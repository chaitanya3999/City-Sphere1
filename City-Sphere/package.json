{
  "name": "city-sphere",
  "version": "1.0.0",
  "description": "Urban Services Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run optimize-images && npm run minify-css && npm run minify-js",
    "optimize-images": "imagemin src/images/* --out-dir=src/images",
    "minify-css": "cleancss -o src/css/styles.min.css src/css/*.css",
    "minify-js": "terser src/js/*.js -o src/js/script.min.js",
    "deploy": "gh-pages -d src"
  },
  "keywords": [
    "urban",
    "services",
    "city",
    "platform"
  ],
  "author": "City Sphere Team",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "google-auth-library": "^9.6.3",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "gh-pages": "^6.1.1",
    "imagemin-cli": "^7.0.0",
    "nodemon": "^3.0.3",
    "serve": "^14.2.1",
    "terser": "^5.27.0"
  },
  "type": "module"
}
